<Window x:Class="RSSReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSSReader"
        mc:Ignorable="d"
        Title="RSS Reader" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MaxWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="urlTB" Height="30" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Padding="0,5,0,0"></TextBox>
        <Button Height="30" Grid.Column="1" Grid.Row="0" Content="Load RSS feed" Click="LoadFeedButtonClick"/>
        <TextBlock Name="outputTB" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"></TextBlock>
    </Grid>
</Window>
